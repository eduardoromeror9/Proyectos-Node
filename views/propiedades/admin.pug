extends ../layout/admin

block contenido
  div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina

    a(href="/propiedades/crear" class="rounded py-2 bg-indigo-500 hover:bg-indigo-600 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Publicar una propiedad

    //- pre= JSON.stringify(propiedades, null, 2)

    if propiedades.length
      
      div(class="bg-white shadow rounded-lg")
        ul(class="divide-y divide-gray-200")
          each propiedad in propiedades
            li
              div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")
                div(class="sm:w-1/4 md:w-1/6")
                  img(src=`uploads/${propiedad.imagen}` alt=`Imagen propiedad ${propiedad.titulo}` class="w-full block")
                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6")
                  a(class="block text-2xl font-extrabold text-indigo-600 truncate" href="#")=propiedad.titulo

                  p(class="text-sm text-black font-bold")=propiedad.categoriaId




                div(class="sm:w-1/4 md:w-2/6 lg:w-1/6")
              

    else
      p.text-center No hay propiedades